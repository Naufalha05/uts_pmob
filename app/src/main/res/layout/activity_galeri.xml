                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Fakultas Ekonomi dan Ilmu Sosial"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

